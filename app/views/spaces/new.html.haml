= simple_form_for(@resource, validate: true, html: {class: 'custom mb0', id: 'list-space-step1', autocomplete: 'off' }) do |f|
  %h2
    List a Space
    %sup (in or near Portland, ME.)
  - unless signed_in?
    .input
      %label.string.required.control-label.user_email{ :for => 'user_email'} Email address
      = email_field_tag :user_email
  - if @resource.nil?
    %p.lead
      %strong Congratulations on listing your first space!
      If you'd like to check out our handy guide on listing an awesome space feel free! Otherwise, enjoy building you listing and if you get stuck or have feedback, just hit us up and we'll get back to you real fastlike.
  .row
    .medium-8.columns
      = render partial: 'address', :locals => { f: f }
      %hr
      = render partial: 'features', :locals => { f: f }
    .medium-4.columns
      .panel
        %h3#monthly_price_label
          %span
            Set Your Price
        = f.input :monthly_price, as: :text, label: false, input_html: { 'data-slider' => 'true', 'data-slider-range' => "0,500", 'data-slider-step' => '5', value: 50 }
      #photos
        %h4 Add Photos
        %ul.clearing-thumbs
          %li
            - if @resource.photo.exists?
              %a{:href => "#{@resource.photo}"}
                = image_or_placeholder(@resource.photo)
            - else
              %a.upload_img1
                %i.icon-plus
            = f.file_field :photo2, class: 'upload_field1', style: 'display: none'
          %li
            - if @resource.photo2.exists?
              %a{:href => "#{@resource.photo2}"}
                = image_or_placeholder(@resource.photo2)
            - else
              %a.upload_img2
                %i.icon-plus
            = f.file_field :photo2, class: 'upload_field2', style: 'display: none'
          %li
            - if @resource.photo3.exists?
              %a{:href => "#{@resource.photo3}"}
                = image_or_placeholder(@resource.photo3)
            - else
              %a.upload_img3
                %i.icon-plus
            = f.file_field :photo3, class: 'upload_field3', style: 'display: none'
          %li
            - if @resource.photo4.exists?
              %a{:href => "#{@resource.photo4}"}
                = image_or_placeholder(@resource.photo4)
            - else
              %a.upload_img4
                %i.icon-plus
            = f.file_field :photo4, class: 'upload_field4', style: 'display: none'
          %li
            - if @resource.photo5.exists?
              %a{:href => "#{@resource.photo5}"}
                = image_or_placeholder(@resource.photo5)
            - else
              %a.upload_img5
                %i.icon-plus
            = f.file_field :photo5, class: 'upload_field5', style: 'display: none'
      = f.button :submit, 'Preview Listing', :class => 'button-primary fullbtn greenie button radius'
