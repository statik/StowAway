- display_style = f.object.new_record? ? 'display: none' : ''
.row
  .column.large-3
    %h4 In or Out?
  .column.large-9
    .where
      = f.collection_radio_buttons :environment, [[:indoor, 'Indoor'] ,[:outdoor, 'Outdoor']], :first, :last do |b|
        = b.radio_button
        = b.label(class: 'button radius', id: "#{b.text.underscore}_button_label") do
          - if b.text == 'Indoor'
            %span.ico-home
          - else
            %span.ico-tree
          %span
            = b.text

%h4#what_kind_of_space{ style: display_style } What type of space is it?
#indoor_button_group.indoor.what{ style: display_style }
  - space_type = [[:attic, 'Attic'],
    [:garage, 'Garage'],
    [:spare_room, 'Spare Room'],
    [:basement, 'Basement']]
  = f.collection_radio_buttons :type, space_type, :first, :second do |b|
    = b.radio_button
    = b.label(class: 'button radius', id: "#{b.text.parameterize.underscore}_button_label") do
      - if b.text == 'Attic'
        %span.ico-flashlight
      - elsif b.text == 'Garage'
        %span.ico-bike
      - elsif b.text == 'Spare Room'
        %span.ico-shipping
      - else
      %span
        = b.text
#outdoor_button_group.outdoor.what{ style: display_style }
  - space_type = [[:driveway, 'Driveway'],
    [:covered, 'Covered Area'],
    [:uncovered, 'Uncovered Area']]
  = f.collection_radio_buttons :type, space_type, :first, :second do |b|
    = b.radio_button
    = b.label(class: 'button radius', id: "#{b.text.parameterize.underscore}_button_label") do
      - if b.text == 'Driveway'
        %span.ico-flashlight
      - elsif b.text == 'Covered Area'
        %span.ico-flashlight
      - elsif b.text == 'Uncovered Area'
        %span.ico-flashlight
      - else
      %span
        = b.text

%section.access#access_button_group{ style: display_style }
  %h4 How's the access?
  .what
    = f.collection_radio_buttons :access, [[:anytime, 'Anytime'], [:appointment, 'Appointment'], [:limited, 'Limited']], :first, :second do |b|
      = b.radio_button
      = b.label(class: 'button', id: "#{b.text.parameterize.underscore}_button_label") do
        - if b.text == 'Anytime'

        - elsif b.text == 'By appointment'

        - elsif b.text == 'Onetime'

        %span
          = b.text
%section.features
  %h4 Features
  %ul.checkbtns.inline-list
    %li
      - active = f.object.climate_controlled ? 'active' : ''
      = f.label :climate_controlled, {:class => 'checkbox button radius' + active, id: 'climate_checkbox_label'}
      = f.check_box :climate_controlled, :class => 'checkbox'
    %li
      - active = f.object.lockable ? 'active' : ''
      = f.label :lockable, :class => 'checkbox button radius ' + active, id: 'lockable_checkbox_label'
      = f.check_box :lockable, :class => 'checkbox'
    %li
      - active = f.object.attended ? 'active' : ''
      = f.label :attended, :class => 'checkbox button radius ' + active, id: 'attended_checkbox_label'
      = f.check_box :attended, :class => 'checkbox '

%section.dimensions
  .row
    .column.large-3
      %h4
        Dimensions
        %small
          (in feet)
    .column.large-9
      = f.input :length, :label => 'length', input_html: { min: 5, max: 500, :step =>"2" }
      = f.input :width, :label => 'width', input_html: { min: 5, max: 500 }
      = f.input :height, :label => 'height', input_html: { min: 5, max: 500 }
      .clearfix
%hr
%section.tags
  %h4
    Tags
  = f.text_field :tag_list
%hr
%section.description
  %h3 Description
  = f.input :notes, :label => 'Tell us a bit about your space.'

