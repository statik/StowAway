.row
  %h2 
    %b Edit this space
  = simple_form_for(@resource, html: {class: 'form-vertical', id: 'list-space-step1' }) do |f|
    .row
      .small-12.column
        = f.input :notes
    .row
      .small-12.column
        = f.label :tags
        = f.text_field :tag_list
    .row
      .small-12.column
        #monthly_price_label
          Monthly Fee $50
        = f.input :monthly_price, as: :text, label: false, input_html: { 'data-slider' => 'true', 'data-slider-range' => "50,500", 'data-slider-step' => '25' }
    .row
      .small-12.column
        = f.input :address1, autofocus: true, required: true
    .row
      .small-12.column
        = f.input :address2
    .row
      .small-6.column
        = f.input :city, required: true
      .small-3.column
        = f.input_field :state, :label => 'State', collection: us_states, autofocus: true, input_html: {style: 'height:100px!important;'}, required: true
      .small-3.column
        = f.input :zip, required: true
    .row
      .small-12.large-6.column
        = f.input_field :country, input_html: { class: 'selectdrop' }, :label => 'Select Country', priority: [ "United States" ], required: true
    .row
      .small-12.large-6.column
        = image_or_placeholder(@resource.photo)
        = f.file_field :photo
    .row
      .small-12.large-6.column
        = image_or_placeholder(@resource.photo2)
        = f.file_field :photo2
    .row
      .small-12.large-6.column
        = image_or_placeholder(@resource.photo3)
        = f.file_field :photo3
    .row
      .small-12.large-6.column
        = image_or_placeholder(@resource.photo4)
        = f.file_field :photo4
    .row
      .small-12.large-6.column
        = image_or_placeholder(@resource.photo5)
        = f.file_field :photo5
    .row
      .small-12.large-6.column
        = f.button :submit, 'Save', class: 'btn-primary large-6 small-12 column'
