= simple_form_for(@resource, html: {class: 'form-vertical custom', id: 'list-space-step1' }) do |f|
  .row
    .large-4.small-12.push-8.columns
      .price
        %h2#monthly_price_label
          %span
            $$
        = f.input :monthly_price, as: :text, label: false, input_html: { 'data-slider' => 'true', 'data-slider-range' => "9,1000", 'data-slider-step' => '25' }
        %h5 Set Your Price
      %ul.small-block-grid-1.large-block-grid-2.fitimg  
        %li
          = image_or_placeholder(@resource.photo)
          = f.file_field :photo
        %li
          = image_or_placeholder(@resource.photo2)
          = f.file_field :photo2
        %li
          = image_or_placeholder(@resource.photo3)
          = f.file_field :photo3
        %li
          = image_or_placeholder(@resource.photo4)
          = f.file_field :photo4
        %li
          = image_or_placeholder(@resource.photo5)
          = f.file_field :photo5
    .small-12.large-8.pull-4.columns
      .row
        .small-12.column
          = f.input :title
      .row
        .small-12.column
          = f.input :address1, autofocus: true, required: true
      .row
        .small-12.column
          = f.input :address2
      .row
        .small-6.column
          = f.input :city, required: true
        .small-3.column
          = f.input_field :state, :label => 'State', collection: us_states, autofocus: true, input_html: {style: 'height:100px!important;'}, required: true
        .small-3.column
          = f.input :zip, required: true
      .row
        .small-12.large-6.column
          = f.input_field :country, input_html: { class: 'selectdrop' }, :label => 'Select Country', priority: [ "United States" ], required: true
      .row
        .small-12.column
          = f.label :tags
          = f.text_field :tag_list
      .row
        .small-12.column
          = f.input :notes
      .row
        .small-12.large-6.column
          = f.button :submit, 'Save', class: 'btn-primary button radius'
