- @spaces.each do |s|
  .row.locations
    .small-2.large-2.column
      = link_to image_or_placeholder(s.photo, :thumb), space_path(s)
    .small-10.large-6.column
      .row
        %h3
          = link_to(h(s.title), space_path(s))
        %h5
          = link_to(h(s.normalized_address), space_path(s))
      .row
        - if s.tags.any?
          - s.tags.each do |tag|
            = link_to tag.name, spaces_url(tag: tag.name)
      .row
        - if signed_in? and current_user.id == s.user_id
          = link_to edit_space_path(s), {:class=>'button round has-tip', "data-tooltip"=>"", :title => 'Edit this Listing'} do
            %i{:class=>'icon-pencil'}
        %a.has-tip.button.round{"data-tooltip" => "", :title => s.notes}
          %i.icon-info-sign
        %a.has-tip.round.avatar{"data-tooltip" => "", :title => s.user.name, :href => user_path(s.user) }
          - if s.user.avatar.exists?
            = image_tag s.user.avatar.url(:thumb)
          - else
            = image_tag "http://placehold.it/32x32"
    .small-12.large-4.column
      .price
        %h2
          $
          = succeed " / Month" do
            = h s.monthly_price
        = link_to '#', {:class=>'button radius greenie fullbtn', 'data-address'=> s.normalized_address, 'data-price'=> s.monthly_price, 'data-stripe_public_key'=> Rails.configuration.stripe[:publishable_key] } do
          %i{:class=>'icon-ok'}
          Book It   
