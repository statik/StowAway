#messageModal.reveal-modal.small
  = simple_form_for Message.new do |f|
    = f.input :recipient, as: :hidden, input_html: { value: @user }
    = f.input :subject, as: :hidden, input_html: { value: "General inquiry" }
    = f.input_field :body, as: :text, label: 'Message'
    = f.button :submit, 'Send', class: "button fullbtn radius"
  %a.close-reveal-modal
    %i.icon-remove-circle
