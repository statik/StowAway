.contain-to-grid
  %nav.top-bar
    %ul.title-area
      %li.name
        .logo
          = link_to "stowaway.co", root_path
          %small.beta beta
      %li.toggle-topbar.menu-icon
        %a.navicon-button.x{:href=>'#'}
          .navicon
    %section.top-bar-section
      %ul.right
        %li.toggle-topbar
          %a{:href => "#"}
        - if user_signed_in?
          %li.has-dropdown
            = link_to user_path(current_user), id: 'account' do
              = render 'layouts/avatar.small'
              %span 
                = current_user.name
            %ul.dropdown
              %li
                = link_to 'My Spaces', user_spaces_path(current_user)
              %li
                = link_to 'My subscriptions', user_charges_path(current_user)
              %li
                = link_to 'Logout', destroy_user_session_path, :method=>'delete'
              %li
                = link_to 'FAQ', 'http://stowaway.uservoice.com/'
              %li
                = link_to 'Terms', terms_path
              - if current_user.has_role? :admin
                %li
                  = link_to 'Admin', rails_admin_path
                  
        - else
          %li
            = link_to 'Sign up', new_user_registration_path
          %li
            = link_to 'Blog', blogit_path
        %li.abtn
          -# We disable turbolinking of spaces page because that breaks the Google Map on initial view
          %a.button.radius{:href => spaces_path}
            %i.icon-search.icon-left.icon-muted
            %span Find
        %li.abtn
          %a.button.radius{:href => new_space_path}
            %i.icon-plus.icon-left.icon-muted
            %span List
