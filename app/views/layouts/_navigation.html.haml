.contain-to-grid
  %nav.top-bar
    %ul.title-area
      %li.name
        .logo
          = link_to "stowaway.co", root_path
          %small.beta beta
    %section.top-bar-section
      %ul.right
        - if user_signed_in?
          %li.has-dropdown
            = link_to user_path(current_user), id: 'account' do
              = render 'layouts/avatar.small'
              %span
                = current_user.name
            %ul.dropdown
              %li
                = link_to user_path(current_user) do
                  %i.icon-dashboard
                  Dashboard
              %li
                = link_to user_spaces_path(current_user) do
                  %i.icon-tasks
                  Listings
              %li
                = link_to messages_path do
                  %i.icon-envelope
                  Messages
              %li
                = link_to edit_user_registration_path(current_user) do
                  %i.icon-pencil
                  Edit Profile
              - if current_user.has_role? :admin
                %li
                  = link_to rails_admin_path do
                    %i.icon-cogs
                    Admin
              %li
                = link_to destroy_user_session_path, :method=>'delete' do
                  %i.icon-power-off
                  Sign Out
        - else
          %li
            = link_to 'Sign up', new_user_registration_path
        %li
          = link_to 'Help', 'http://stowaway.uservoice.com/'
        %li.abtn
          %a.button.radius{:href => spaces_path}
            %i.icon-search.icon-left.icon-muted
            %span Find
        %li.abtn.last
          %a.button.radius{:href => new_space_path}
            %i.icon-plus.icon-left.icon-muted
            %span List
  %a.menu-link{:href=>'#'}
    %i.icon-reorder